pipeline{
agent any
// agent{
//label 'nodeName'
//}
tools{
maven 'maven3.8.6'
}
stages{
stage('CheckOutCode'){
steps{
git branch: 'development', credentialsId: 'b8a95925-b69d-4f50-90ae-5184df7834fe', url: 'https://github.com/kunalsingh5599/maven-web-application.git'
}
}
stage('Build'){
steps{
sh "mvn clean package"
}
}
stage('ExecuteSonarQubeReport'){
steps{
sh "mvn sonar:sonar"
}
}
stage('UploadArtifactstoArtifactRepository'){
steps{
sh "mvn deploy"
}
}
stage('UploadArtifactstoTomcat'){
steps{
sshagent(['35f61178-edff-409d-b23b-fe1c81333345']) {
sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@172.31.32.9:/opt/apache-tomcat-9.0.65/webapps/"
}
}
}
}
post {
  success {
    slackNotifications(currentBuild.result)
  }
  failure {
      slackNotifications(currentBuild.result)
    
  }
}
}
def slackNotifications(String buildStatus = 'STARTED') {
  // build status of null means successful
  buildStatus =  buildStatus ?: 'SUCCESSFUL'

  // Default values
  def colorName = 'RED'
  def colorCode = '#FF0000'
  def subject = "${buildStatus}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'"
  def summary = "${subject} (${env.BUILD_URL})"

  // Override default values based on build status
  if (buildStatus == 'STARTED') {
    color = 'YELLOW'
    colorCode = '#FFFF00'
  } else if (buildStatus == 'SUCCESSFUL') {
    color = 'GREEN'
    colorCode = '#00FF00'
  } else {
    color = 'RED'
    colorCode = '#FF0000'
  }

  // Send notifications
  slackSend (color: colorCode, message: summary)
}
